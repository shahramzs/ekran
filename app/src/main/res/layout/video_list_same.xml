<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewSameVideo"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_170sdp"
        app:cardElevation="2dp"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_145sdp"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <com.example.ekran.customView.EkranImageView
                android:id="@+id/imgSameVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />
            <TextView
                android:id="@+id/txtSameVideoDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:12"
                android:gravity="start"
                android:layout_alignParentStart="true"
                android:textColor="@color/Neutral99"
                android:background="@drawable/background_duration"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/txtSameVideoLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="12MB"
                android:layout_alignParentEnd="true"
                android:textColor="@color/Neutral99"
                android:background="@drawable/background_duration"
                android:padding="5dp"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layoutDirection="rtl"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/txtSameVideoTitle"
                tools:text="بهترین کوس دنیا"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Ekran.LabelMedium"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtSameVideoVisit"
                    tools:text="۲۰۰ بازدید"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Ekran.LabelSmall"/>
                <TextView
                    android:id="@+id/txtSameVideoTime"
                    tools:text=" ۳ ماه قبل"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Ekran.LabelSmall"/>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>