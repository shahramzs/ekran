<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewSameVideo"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_170sdp"
        android:padding="10dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_145sdp"
            android:padding="10dp">

            <com.example.ekran.customView.EkranImageView
                android:id="@+id/imgSimilarVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:roundedCornerRadius="5dp"
                app:viewAspectRatio="1"/>

            <TextView
                android:id="@+id/txtSimilarVideoDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@drawable/background_duration"
                android:gravity="start"
                android:padding="5dp"
                android:textColor="@color/Neutral99"
                tools:text="00:12" />

            <TextView
                android:id="@+id/txtSimilarVideoLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/background_duration"
                android:gravity="end"
                android:padding="5dp"
                android:textColor="@color/Neutral99"
                tools:text="12MB" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSimilarVideoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="بهترین کوس دنیا"
                android:textAppearance="@style/TextAppearance.Ekran.LabelMedium"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSimilarVideoUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    tools:text="shahram.zs"
                    android:textAppearance="@style/TextAppearance.Ekran.LabelSmall"/>

                <TextView
                    android:id="@+id/txtSimilarVideoVisit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    tools:text="۲۰۰ بازدید"
                    android:textAppearance="@style/TextAppearance.Ekran.LabelSmall"/>

                <TextView
                    android:id="@+id/txtSimilarVideoTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    tools:text=" ۳ ماه قبل"
                    android:textAppearance="@style/TextAppearance.Ekran.LabelSmall"/>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>